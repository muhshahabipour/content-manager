<div class="btn-create-wrapper">

    <button type="button" class="btn-delete hidden" id="btn-delete-{{id}}" data-target="#delete-sections-{{id}}" data-action="removeList" data-toggle="tooltip" data-placement="bottom" title="حذف محتوا">
        <i class="material-icons md-18 btn-create-text" data-target="#remove-sections-{{id}}" data-action="removeList">delete</i>
    </button>



    <button type="button" class="btn-create" id="btn-create-{{id}}" data-target="#create-sections-{{id}}" data-action="toggleList" data-toggle="tooltip" data-placement="bottom" title="اضافه کردن محتوا"> 
        <i class="material-icons md-18 btn-create-text" data-target="#create-sections-{{id}}" data-action="toggleList">add</i>
    </button>


    <ul id="create-sections-{{id}}" class="create-section-list">
        <li>
            <button type="button" data-type="link" data-action="add" id="btn-add-link-{{id}}" data-toggle="modal" data-target="#urlModal"
                data-section-id="{{id}}">
                <i class="material-icons md-18">link</i>
            </button>
        </li>
        <li>
            <button type="button" data-type="video" data-action="add" id="btn-add-video-{{id}}" data-toggle="modal" data-target="#contentFileManagerModal"
                data-section-id="{{id}}">
                <i class="material-icons md-18">movie_creation</i>
            </button>
        </li>
        <li>
            <button type="button" data-type="audio" data-action="add" id="btn-add-audio-{{id}}" data-toggle="modal" data-target="#contentFileManagerModal"
                data-section-id="{{id}}">
                <i class="material-icons md-18">audiotrack</i>
            </button>
        </li>
        <li>
            <button type="button" data-type="image" data-action="add" id="btn-add-image-{{id}}" data-toggle="modal" data-target="#contentFileManagerModal"
                data-section-id="{{id}}">
                <i class="material-icons md-18">photo</i>
            </button>
        </li>
    </ul>
</div>